{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "airbnb-typescript/base"],
  "overrides": [],
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 2 }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  }
}
